extends ../../layouts/default.pug

block main
    .container
        if (product.title)
            h1(class="mb-4 text-primary font-weight-bold text-center") #{product.title}
        .row
            .col-md-6
                if (product.price)
                    div(class="mb-3") 
                        span.font-weight-bold Giá: 
                        span.text-success.font-weight-bold #{product.price}$
                
                if (product.discountPercentage)
                    div(class="mb-3") 
                        span.font-weight-bold Giảm giá: 
                        span.text-danger.font-weight-bold #{product.discountPercentage}%

                if (product.stock)
                    div(class="mb-3 d-flex align-items-center") 
                        span.font-weight-bold Còn lại: 
                        span.badge.badge-pill(
                            class=(product.stock > 10 ? "badge-light text-dark border border-success" : "badge-warning text-dark border border-danger") 
                            style="font-size: 1.1rem; padding: 6px 12px; margin-left: 10px;"
                        ) #{product.stock}

                if (product.position)
                    div(class="mb-3") 
                        span.font-weight-bold Vị trí: 
                        span.text-primary.font-weight-bold #{product.position}

            .col-md-6
                if (product.thumbnail)
                    div(class="mb-4 text-center")
                        img(
                            src=product.thumbnail
                            style="width: 180px; border-radius: 8px; box-shadow: 2px 2px 10px rgba(0,0,0,0.1);"
                            alt="Hình ảnh sản phẩm"
                        )

        if (product.description)
            div(class="mb-4 p-3 border rounded bg-light") 
                span.font-weight-bold Mô tả: 
                span.text-secondary #{product.description}

    script(src="/admin/js/product.js")
